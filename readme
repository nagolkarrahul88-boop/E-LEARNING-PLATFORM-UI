    assesment.js


  const MAX_RETRIES = 3;

window.onload = function () {
  const status = localStorage.getItem("HTML_ASSESSMENT");
  const retries = parseInt(localStorage.getItem("HTML_RETRIES")) || 0;

  if (status === "passed") {
    document.getElementById("result").innerHTML =
      "<span style='color:green'>‚úÖ Assessment already passed.</span>";
    document.getElementById("submitBtn").disabled = true;
    document.getElementById("viewCertBtn").style.display = "inline-block";
    return;
  }

  document.getElementById("retryInfo").innerText =
    `Attempts left: ${MAX_RETRIES - retries}`;

  const radios = document.querySelectorAll("input[type=radio]");
  radios.forEach(r =>
    r.addEventListener("change", checkAllAnswered)
  );
};

function checkAllAnswered() {
  const questions = ["q1", "q2", "q3"];
  const allAnswered = questions.every(q =>
    document.querySelector(`input[name="${q}"]:checked`)
  );

  document.getElementById("submitBtn").disabled = !allAnswered;
}

function submitAssessment() {
  let retries = parseInt(localStorage.getItem("HTML_RETRIES")) || 0;

  if (retries >= MAX_RETRIES) {
    document.getElementById("result").innerHTML =
      "<span style='color:red'>‚ùå Maximum attempts reached.</span>";
    document.getElementById("submitBtn").disabled = true;
    return;
  }

  const answers = {
    q1: "b",
    q2: "b",
    q3: "a"
  };

  let score = 0;

  for (let q in answers) {
    const selected = document.querySelector(`input[name="${q}"]:checked`);
    if (selected && selected.value === answers[q]) {
      score++;
    }
  }

  const percent = Math.floor((score / 3) * 100);

  if (percent >= 70) {
    localStorage.setItem("HTML_ASSESSMENT", "passed");

    document.getElementById("result").innerHTML =
      "<span style='color:green'>‚úÖ Assessment Passed!</span>";

    document.getElementById("submitBtn").disabled = true;
    document.getElementById("viewCertBtn").style.display = "inline-block";
    document.getElementById("retryInfo").innerText = "";

  } else {
    retries++;
    localStorage.setItem("HTML_RETRIES", retries);

    document.getElementById("result").innerHTML =
      "<span style='color:red'>‚ùå Failed. Please try again.</span>";

    document.getElementById("retryInfo").innerText =
      `Attempts left: ${MAX_RETRIES - retries}`;

    if (retries >= MAX_RETRIES) {
      document.getElementById("submitBtn").disabled = true;
      document.getElementById("retryInfo").innerText =
        "‚ùå No attempts left.";
    }
  }
}

function goToCertificate() {
  window.location.href = "certificate.html";
}

auth.js

function login() {
    const name = document.getElementById("name").value.trim();
    const email = document.getElementById("email").value.trim();
    const error = document.getElementById("loginError");
  
    // Simple professional email regex
    const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  
    if (!name || !email) {
      error.innerText = "‚ùå Please enter both name and email";
      return;
    }
  
    if (!emailPattern.test(email)) {
      error.innerText = "‚ùå Please enter a valid email address";
      return;
    }
  
    // Clear error
    error.innerText = "";
  
    // Store user details
    localStorage.setItem("user_name", name);
    localStorage.setItem("user_email", email);
  
    window.location.href = "courses.html";
  }

  
certificate.js
function loadCertificate() {
    const completed = JSON.parse(localStorage.getItem("HTML")) || [];
    const assessment = localStorage.getItem("HTML_ASSESSMENT");
    const name = localStorage.getItem("user_name");
  
    const message = document.getElementById("certMessage");
    const certBox = document.getElementById("certificate");
  
    if (completed.length !== 9 || assessment !== "passed") {
      message.innerText =
        "‚ùå Certificate is locked. Please complete all videos and pass the assessment.";
      certBox.style.display = "none";
      return;
    }
  
    message.innerText = "";
    certBox.style.display = "block";
  
    document.getElementById("studentName").innerText =
      name || "Student";
  
    const today = new Date();
    const formattedDate =
      today.getDate() + "/" +
      (today.getMonth() + 1) + "/" +
      today.getFullYear();
  
    document.getElementById("certDate").innerText = formattedDate;
  
    const certId =
      "CODTECH-" +
      today.getFullYear() +
      "-" +
      Math.floor(100000 + Math.random() * 900000);
  
    document.getElementById("certId").innerText = certId;
    localStorage.setItem("CERTIFICATE_ID", certId);
  }
  
