  function openCourse(course) {
    localStorage.setItem("currentCourse", course);
    window.location.href = "course.html";
  }
  

  htmlCourse.js
  const htmlChapters = [
    "HTML Editors",
    "HTML Basic",
    "HTML Elements",
    "HTML Attributes",
    "HTML Headings",
    "HTML Paragraphs",
    "HTML Formatting",
    "HTML Links",
    "HTML Forms"
  ];
  
  function loadHTMLChapters() {
    const container = document.getElementById("chapterList");
    const completed = JSON.parse(localStorage.getItem("HTML")) || [];
  
    container.innerHTML = "";
  
    htmlChapters.forEach((chapter, index) => {
      const status = completed.includes(index)
        ? "‚úÖ Completed"
        : "‚è≥ Pending";
  
      container.innerHTML += `
        <div class="card">
          <h3>${chapter}</h3>
          <p>Status: ${status}</p>
          <button onclick="openChapter(${index})">
            Open Chapter
          </button>
        </div>
      `;
    });
  }
  
  function openChapter(index) {
    localStorage.setItem("currentChapter", index);
    window.location.href = "video.html";
  }
  

  htmlVideo.js
  const htmlChapterTitles = [
    "HTML Editors",
    "HTML Basic",
    "HTML Elements",
    "HTML Attributes",
    "HTML Headings",
    "HTML Paragraphs",
    "HTML Formatting",
    "HTML Links",
    "HTML Forms"
  ];
  
  // ‚úÖ VERIFIED YouTube Video IDs
  const htmlChapterVideos = [
    "bBP0ckEln4Y",
    "it1rTvBcfRg",
    "vIoO52MdZFE",
    "yMX901oVtn8",
    "9gHPpwq6IaY",
    "qis4kAOThLw",
    "7FqQLqNIEY8",
    "HA6bByKdAQM",
    "VLeERv_dR6Q"
  ];
  
  let player;
  let chapterIndex;
  let resumeKey;
  
  function initVideoPage() {
    // Called by body onload
    // YouTube API will call onYouTubeIframeAPIReady
  }
  
  function onYouTubeIframeAPIReady() {
    loadVideoPage();
  }
  
  function loadVideoPage() {
    chapterIndex = parseInt(localStorage.getItem("currentChapter"));
  
    if (isNaN(chapterIndex)) {
      alert("No chapter selected");
      window.location.href = "course.html";
      return;
    }
  
    document.getElementById("courseName").innerText = "HTML Course";
    document.getElementById("breadcrumbChapter").innerText =
      htmlChapterTitles[chapterIndex];
  
    resumeKey = "HTML_YT_TIME_" + chapterIndex;
  
    player = new YT.Player("player", {
      height: "400",
      width: "100%",
      videoId: htmlChapterVideos[chapterIndex],
      playerVars: {
        rel: 0,
        modestbranding: 1,
        start: parseFloat(localStorage.getItem(resumeKey)) || 0
      },
      events: {
        onStateChange: onPlayerStateChange
      }
    });
  
    // Save progress every 5 seconds (best-effort resume)
    setInterval(() => {
      if (player && player.getCurrentTime) {
        localStorage.setItem(resumeKey, player.getCurrentTime());
      }
    }, 5000);
  }
  
  function onPlayerStateChange(event) {
    // 0 = video ended
    if (event.data === YT.PlayerState.ENDED) {
      markCompleted(chapterIndex);
      localStorage.removeItem(resumeKey);
  
      document.getElementById("videoStatus").innerText =
        "‚úÖ Chapter completed";
    }
  }
  
  function markCompleted(index) {
    let completed = JSON.parse(localStorage.getItem("HTML")) || [];
  
    if (!completed.includes(index)) {
      completed.push(index);
      localStorage.setItem("HTML", JSON.stringify(completed));
    }
  }
  

  progress.js


  function getHTMLProgressPercent() {
    const completed = JSON.parse(localStorage.getItem("HTML")) || [];
    const total = 9;
  
    // Base progress from videos (max 90%)
    let percent = Math.floor((completed.length / total) * 90);
  
    // üî• Add assessment contribution
    const assessment = localStorage.getItem("HTML_ASSESSMENT");
    if (completed.length === total && assessment === "passed") {
      percent = 100;
    }
  
    return percent;
  }

  
  verify.js
  function verifyCertificate() {
    const enteredId = document.getElementById("verifyId").value.trim();
    const storedId = localStorage.getItem("CERTIFICATE_ID");
    const name = localStorage.getItem("user_name");
  
    const resultDiv = document.getElementById("verifyResult");
  
    if (!enteredId) {
      resultDiv.innerHTML =
        "<p style='color:red'>‚ùå Please enter a Certificate ID.</p>";
      return;
    }
  
    if (enteredId === storedId) {
      resultDiv.innerHTML = `
        <p style="color:green; font-weight:bold">‚úÖ Certificate is VALID</p>
        <p><strong>Name:</strong> ${name}</p>
        <p><strong>Course:</strong> HTML Course</p>
      `;
    } else {
      resultDiv.innerHTML =
        "<p style='color:red; font-weight:bold'>‚ùå Invalid Certificate ID</p>";
    }
  }
  


